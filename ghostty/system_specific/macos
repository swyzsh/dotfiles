macos-icon = "blueprint"

macos-titlebar-style = "transparent"

window-height = 50
window-width = 150

macos-option-as-alt = true

# -- Keybinds --
keybind = ctrl+one=goto_tab:1
keybind = ctrl+two=goto_tab:2
keybind = ctrl+three=goto_tab:3
keybind = ctrl+four=goto_tab:4
keybind = ctrl+five=goto_tab:5
keybind = ctrl+six=goto_tab:6
keybind = ctrl+seven=goto_tab:7
keybind = ctrl+eight=goto_tab:8
keybind = ctrl+nine=goto_tab:9
keybind = ctrl+zero=last_tab

keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
# keybind = cmd+d=unbind
# keybind = cmd+shift+d=unbind

keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right

keybind = ctrl+cmd+h=resize_split:left,10
keybind = ctrl+cmd+j=resize_split:down,10
keybind = ctrl+cmd+k=resize_split:up,10
keybind = ctrl+cmd+l=resize_split:right,10
keybind = cmd+enter=text:\n
keybind = shift+enter=text:\n
