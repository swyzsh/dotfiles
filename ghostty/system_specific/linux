# -- Keybinds --
keybind = ctrl+one=goto_tab:1
keybind = ctrl+two=goto_tab:2
keybind = ctrl+three=goto_tab:3
keybind = ctrl+four=goto_tab:4
keybind = ctrl+five=goto_tab:5
keybind = ctrl+six=goto_tab:6
keybind = ctrl+seven=goto_tab:7
keybind = ctrl+eight=goto_tab:8
keybind = ctrl+nine=goto_tab:9
keybind = ctrl+zero=last_tab

keybind = alt+d=new_split:right
keybind = alt+shift+d=new_split:down

keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

keybind = cmd+t=new_tab
keybind = cmd+w=close_window

keybind = alt+cmd+h=resize_split:left,10
keybind = alt+cmd+j=resize_split:down,10
keybind = alt+cmd+k=resize_split:up,10
keybind = alt+cmd+l=resize_split:right,10
